name: Fetch and Update Google Sheet

on:
  schedule:
    - cron: '0 0 * * *'  # Runs daily at midnight UTC
  workflow_dispatch:  # Allows for manual trigger

jobs:
  update-google-sheets:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2  # Fetch the repository contents

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'  # Use a recent Python version

      - name: Install dependencies
        run: |
          pip install --upgrade pip
          pip install -r requirements.txt  # Include dependencies like gspread, pandas, oauth2client

      - name: Run Python script
        run: python your_script.py  # Replace 'your_script.py' with the name of your script
